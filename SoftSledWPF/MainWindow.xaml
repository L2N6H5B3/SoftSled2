<Window x:Name="MainWindowWPF" x:Class="SoftSledWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftSledWPF"
        mc:Ignorable="d"
        AllowsTransparency="False"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <WindowsFormsHost x:Name="wfHost" Grid.Row="1" Grid.Column="0"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFEA1313" MinWidth="500" MinHeight="400" />
    </Grid>
</Window>
